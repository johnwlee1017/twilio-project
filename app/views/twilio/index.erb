# given a string return the frequency of each letter in the string
# ie: aabbc  a=>2, b=>2, c => 1
def frequency(input)
    input_array = input.split('')
    input_hash = {}
    j = 0
    while j < input_array.length
        count = 0 
        i = 0
        while i < input_array.length
            if input_array[j] == input_array[i]
            count += 1
            end
            i+=1
        end
        input_hash[input_array[j]] = count
        j+=1
    end
    p input_hash
end



